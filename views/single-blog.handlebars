<div class="my-5">
{{> post-info post}}

{{#if loggedIn}}
  <form class="comment-form">
    <div class="form-floating">
      <textarea
        class="form-control"
        placeholder="Leave a comment here"
        id="floatingTextarea"
        name="comment-body"
      ></textarea>
    </div>

    <div class="m-2">
      <button type="submit" class="btn btn-primary">Add comment</button>
    </div>
  </form>
{{/if}}

{{> comments post.comments}}
</div>
{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}