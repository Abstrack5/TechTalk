<div class="row">
    <div class="card-header">
       <h4 class="card-title post-title"><a class="link" href="/post/{{id}}">{{title}}</a></h4>
        <div class="card-body post-body">
        <p class="card-body post-content">{{post_content}}</p>
        <p class="card-text post-author">posted by <span class="post-username">{{user.username}}</span> on {{format_date created_at}} | {{comments.length}} {{format_plural "comment" comments.length}}</p>
        </div>
    </div>
</div>

