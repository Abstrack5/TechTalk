<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post">
    <div>
      <label for="update-title" class="form-label">Title</label>
      <input
        name="update-title"
        type="text"
        value="{{post.title}}"
        class="form-input form-control"
      />
    </div>
    <div>
      <label for="content" class="form-label">Content</label>
      <input
        name="content"
        class="form-input form-control"
        type="text"
        value="{{post.post_content}}"
      />
    </div>
    <div class="my-3">
    <button type="submit" class="btn btn-success">Update post</button>
    <button type="button" class="btn delete-post-btn btn-danger">Delete post</button>
    </div>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>